<div class="container">

    <div class="row">
        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4"></div>
        <div class="logincard card-1 col-xs-4 col-sm-4 col-md-4 col-lg-4">
            <br>
            <h2>Incluir Salud</h2>
            <br>
            <h5>Escriba su usuario y contrase単a para ingresar</h5>
            <div class="loginform">
                <input id="user" type="text" placeholder="Usuario">
                <input id="pass" type="password" placeholder="Contrase単a">
            </div>
            <br>
            <button id="login" class="btn btn-success btn-block">Ingresar</button>
            <br>
        </div>
        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4"></div>
    </div>
</div>

<script>

    $(function(){

        $('body').keypress(function( event ) {
            if ( event.which === 13 ) {
                event.preventDefault();

                $("#login").trigger('click');
            }
        });

        $("#login").click(function(){

            $.ajax({
                type: "POST",
                url: 'trylogin',
                data: {
                    user: $("#user").val(),
                    pass: $("#pass").val()
                },
                success: function(data){

                    if(data){
                        window.location.replace(data);
                    }else{
                        alert("Nombre de usuario o contrase単a incorrecta");
                    }

                },
                error: function(e){
                    console.log(e);
                    alert("Nombre de usuario o contrase単a incorrecta");
                }
            });
        });

    });

</script>

<style>

    body{
        background-color: #DDD;
    }

    .logincard{
        margin-top: 10px;
        background-color: #FFF;
    }
</style>